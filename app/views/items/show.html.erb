<p>
  <strong>
    <%= @item.title %>
  </strong>
</p>

<table>
  <col width="180">
  <col width="180">
  <col width="50">
  <tr>
    <th>Reviewer</th>
    <th>Review</th>
    <th>Rating</th>
  </tr>

  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.reviewer %></td>
      <td><%= review.review %></td>
      <td><%= review.rating %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to 'New review', new_item_review_path(@item) %>
</p>
